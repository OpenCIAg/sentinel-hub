{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "rootDir": "./src/",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}